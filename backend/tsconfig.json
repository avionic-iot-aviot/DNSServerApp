{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es6", "dom", "es2017"],
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "sourceRoot": "src",
        "moduleResolution": "node"       
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}